<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.phalgundixit.githubtrending">

    <uses-sdk tools:overrideLibrary="jp.wasabeef.recyclerview" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.phalgundixit.githubtrending.GithubTrendingReposApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="31">
        <activity
            android:name=".activities.ContributorDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_repo_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RepoDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_repo_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TrendingRepoSearchActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>