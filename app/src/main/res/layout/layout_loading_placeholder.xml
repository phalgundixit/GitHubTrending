<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="21dp"
    android:paddingBottom="21dp">

    <ImageView
        android:id="@+id/ivAvatarPlaceHolder"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/content_desc_avatar"
        android:src="@drawable/drawable_round_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vPlaceUserName"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/drawable_placeholder_rectangle"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPlaceHolder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".4" />

    <View
        android:id="@+id/vPlaceRepoName"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/drawable_placeholder_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vPlaceUserName"
        app:layout_constraintTop_toBottomOf="@id/vPlaceUserName" />


</androidx.constraintlayout.widget.ConstraintLayout>